<UserControl x:Class="MVVMTemplate.CustomDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMTemplate"
             mc:Ignorable="d" 
             d:DesignHeight="165" d:DesignWidth="585" Height="165" Width="585"
             Background="Black">
    <Grid>
        <Label x:Name="ui_message_label"
               HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Margin="0,30,0,0" Height="30" Width="200" Padding="0"
               Foreground="White" FontFamily="Arial" FontSize="16"
               TabIndex="0"
               Content="{Binding UIMessage}"/>
    </Grid>
</UserControl>
