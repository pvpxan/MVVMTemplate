<Application x:Class="MVVMTemplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVMTemplate"
             Startup="AppStartup">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Templates/DataTemplates.xaml" />

                <!-- START User defined custom dialog DataTypes -->
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type local:CustomDialogViewModel}">
                        <local:CustomDialog></local:CustomDialog>
                    </DataTemplate>
                </ResourceDictionary>
                <!-- END User defined custom dialog DataTypes -->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

</Application>
